@page
@model IndexModel
@{
    ViewData["Title"] = "Система отслеживания вагонов";
}

<div class="container">
    <h1 class="display-4 text-center mb-4">Система отслеживания вагонов</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Запрос данных о вагонах</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="form-label">Дата начала:</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate" class="form-label">Дата окончания:</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search"></i> Получить выгрузку данных
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="alert alert-danger" role="alert">
                    <strong>Ошибка:</strong> @Model.ErrorMessage
                </div>
            </div>
        </div>
    }

    @if (Model.ShowResults)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Результаты поиска 
                            <span class="badge bg-primary">@Model.TrainCars.Count вагонов</span>
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (Model.TrainCars.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>№ Вагона</th>
                                            <th>Время прибытия</th>
                                            <th>Время отправления</th>
                                            <th>Статус</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var car in Model.TrainCars)
                                        {
                                            <tr>
                                                <td><strong>@car.CarNumber</strong></td>
                                                <td>
                                                    @if (car.ArrivalTime != null)
                                                    {
                                                        @car.ArrivalTime.ToDateTime().ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (car.DepartureTime != null)
                                                    {
                                                        @car.DepartureTime.ToDateTime().ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (car.ArrivalTime != null && car.DepartureTime != null)
                                                    {
                                                        <span class="badge bg-success">Обработан</span>
                                                    }
                                                    else if (car.ArrivalTime != null)
                                                    {
                                                        <span class="badge bg-warning">На станции</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Ожидается</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    За указанный период данные о вагонах не найдены
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>